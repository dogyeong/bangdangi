<script>
    var selectToggleBtn = document.querySelectorAll('.select_btn');
    var chkbox = document.querySelectorAll('input[type="checkbox"]');
    var radio = document.querySelectorAll('input[type="radio"]');

    // 체크박스에 체크 또는 해제했을 때 텍스트 조작
    chkbox.forEach((cb) => {
        cb.onchange = function () {
            let field = this.name;
            var text = document.querySelector(`.select_btn_text[data-field="${field}"]`);
            if (this.checked) { // 체크된 경우
                if (text.innerText == text.dataset.placeholder) text.innerText = this.value; // 체크되어있는게 없는 경우
                else text.innerText = text.innerText + ',' + this.value; // 체크되어있는게 있는 경우
            } else { // 체크해제된 경우
                // 체크해제된 문자열 제거
                text.innerText = text.innerText.replace(`,${this.value},`, ','); // 해당 문자가 중간에 있는 경우
                text.innerText = text.innerText.replace(`,${this.value}`, ''); // 해당 문자가 제일 뒤에 있는 경우
                text.innerText = text.innerText.replace(`${this.value},`, ''); // 해당 문자가 제일 앞에 있는 경우
                text.innerText = text.innerText.replace(`${this.value}`, ''); // 해당 문자가 혼자 있는 경우
                // 전부 지워졌는지 검사
                if (text.innerText == '') text.innerText = text.dataset.placeholder;
            }
        };
    })

    // 라디오박스 체크했을 때 텍스트 조작
    radio.forEach((r) => {
        r.onchange = function () {
            let field = this.name;
            var text = document.querySelector(`.select_btn_text[data-field="${field}"]`);
            text.innerText = this.value;
        }
    });

    // 각 항목 눌렀을 때 접혔다 펴졌다
    selectToggleBtn.forEach((b) => {
        b.addEventListener('click', function () {
            var type = this.dataset.field;
            var target = document.querySelector(`.select_input_container[data-field="${type}"]`);
            var icon = document.querySelector(`.select_btn[data-field="${type}"] i`);

            target.classList.toggle('hidden');
            icon.classList.toggle('xi-angle-down-min');
            icon.classList.toggle('xi-angle-up-min');
        });
    });

    // 입력 가능/불가능 토글 스위치
    document.querySelectorAll('.enable_toggle_btn').forEach((btn) => {
        btn.addEventListener('click', function () {
            let field = this.dataset.field;
            let input = document.querySelector(`input[data-field='${field}']`);
            if (this.classList.toggle('active')) {
                input.disabled = false;
            } else {
                input.value = '';
                input.disabled = true;
            }
        })
    })
</script>

