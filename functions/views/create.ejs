                    <label class="col-sm-2 control-label" for="deposit">보증금</label>
                    <div class="col-sm-10">
                        <div class="input-group">
                            <input type="number" class="form-control" name="deposit" placeholder="보증금"
                                aria-describedby="price-addon">
                            <span class="input-group-addon" id="price-addon">만원</span>
                        </div>
                    </div>
                </div>

                <!-- 월세 -->
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="price">월세</label>
                    <div class="col-sm-10">
                        <div class="input-group">
                            <input type="number" class="form-control" name="price" placeholder="월세"
                                aria-describedby="deposit-addon">
                            <span class="input-group-addon" id="deposit-addon">만원</span>
                        </div>
                    </div>
                </div>

                <!-- 관리비 -->
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="expense">관리비</label>
                    <div class="col-sm-10">
                        <div class="input-group">
                            <input type="number" class="form-control" name="expense" placeholder="관리비"
                                aria-describedby="expense-addon">
                            <span class="input-group-addon" id="expense-addon">만원</span>
                        </div>
                    </div>
                </div>

                <!-- 시작날짜 -->
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="startDate">시작날짜</label>
                    <div class="col-sm-10">
                        <div class="input-group">
                            <input type="date" class="form-control" name="startDate" placeholder="시작날짜"
