                <h3 class="block-title">건물정보</h3>
                <!-- 주소 -->
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="address">주소</label>
                    <div class="col-sm-10">
                        <div class="input-group">
                            <input type="text" class="form-control" name="address" placeholder="주소" readonly required>
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">검색</button>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- 건물 상세위치 -->
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="locationS">위치설명</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="locationS" placeholder="예)지하철 5분거리">
                    </div>
                </div>
            </div>

            <!-- block 3 -->
            <div class="block3 block">
                <h3 class="block-title">매물정보</h3>

                <!-- 보증금 -->
