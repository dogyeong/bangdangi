        <form class="form-horizontal" action="/board/create_process" method="post">

            <!-- block 1 -->
            <div class="block1 block">
                <!-- 제목 -->
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="title">제목</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="title" placeholder="제목을 입력하세요" required>
