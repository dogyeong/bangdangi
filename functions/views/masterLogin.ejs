    <script>
        function login(e) {
            e.preventDefault();
            let mail = document.querySelector('.login-form > input[type="text"]').value;
            let pw = document.querySelector('.login-form > input[type="password"]').value;

            firebase.auth().signInWithEmailAndPassword(mail, pw)
            .then(result => {
                window.location.href = 'http://bangdangi.web.app/master2'
            })
            .catch(function(error) {
                // Handle Errors here.
                console.log(error);
            });
        }

        firebase.auth().onAuthStateChanged((user) => {
            if (user) {
                window.location.href = 'http://bangdangi.web.app/master2';
            } else {
                ;
            }
        });
        
    </script>
